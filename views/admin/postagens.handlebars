<h2>Listas de postagens: </h2>
<br>
<a href="/admin/postagens/add">
  <button class="btn btn-success">Nova postagem</button>
</a>

{{#each postagens}}
   <div class="card mt-4">
     <div class="card-body">
       <h4>{{titulo}}</h4>
       <p>{{descricao}}</p>
       <small>Data: {{data}}</small><br>
       <small>Categoria: {{categoria.nome}}</small>
     </div>
   </div>
{{else}}
  <p>Nenhuma postagem registrada</p>
{{/each}}